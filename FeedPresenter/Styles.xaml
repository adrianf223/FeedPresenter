<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FeedPresenter"
    >

    <Style x:Key="feedSumary" TargetType="TextBlock">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="FontStretch" Value="Expanded" />
        <Setter Property="Height" Value="122" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Width" Value="360" />
    </Style>

    <Style x:Key="imagethumb" TargetType="Image">
        <Setter Property="Margin" Value="5" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <Style x:Key="feedtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Width" Value="400" />
    </Style>

    <Style x:Key="backgroundimage" TargetType="Image">
        <Setter Property="Margin" Value="0,0,0.5,0.5" />
        <Setter Property="OpacityMask" Value="#AA000000" />
        <Setter Property="Stretch" Value="UniformToFill" />
    </Style>

</ResourceDictionary>